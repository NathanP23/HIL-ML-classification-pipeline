# HIL ML Classification Pipeline - Environment Configuration Template
# Copy this file to .env and fill in your specific values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Column Mappings - JSON format
# Maps standardized column names to original dataset column names
COLUMN_MAPPINGS={"main_classification": ["Column1"], "text_content": ["Column2"]}

# File Configuration - JSON format
# Defines input files and their properties
FILES={"Data/file1.xlsx": {"original_name": "original.xlsx", "sheet_name": "Sheet1"}}

# Label Information - JSON format
# Defines classification categories and their descriptions
LABEL_INFO={"category1": "Description of category 1", "category2": "Description of category 2"}

# System Prompts - JSON format
# Template prompts for different classification scenarios
PROMPTS={"system_basic": "Basic system prompt", "user_basic": "Basic user prompt"}

# System Prompt Template
SYSTEM_PROMPT_TEMPLATE="You are a classifier. The input text will be in [LANGUAGE], but you must classify it using English categories.\nBelow are the definitions of each category:\n{definitions}\nReturn a JSON object with a 0 or 1 for each category. Every category must appear exactly once."

# Batch Processing Defaults
BATCH_SIZE=10
BATCH_METHOD=longest
MAX_EXAMPLES=30

PYTHONDONTWRITEBYTECODE=1
